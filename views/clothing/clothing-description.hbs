<div>
    <h2>{{chosenClothing.name}} details</h2>
    <section>
        <div>
            <img src="{{chosenClothing.image}}" alt="image logo">
            <div>
                <h4> Brand: {{chosenClothing.brand}}</h4>
                <p> Sizes: {{chosenClothing.sizes}}</p>
                <p> Type: {{chosenClothing.type}}</p>
                <p> Gender: {{chosenClothing.gender}}</p>
            </div>
            <p> Description: {{chosenClothing.description}}</p>
            {{!-- {{#if isFav}}
                <form action="/favourite/remove/{{chosenClothing._id}}" method="post">
                    <button type="submit"><i class="bi bi-bookmark-star-fill">Remove from favourites
                        </i></button>
                </form>
            {{else}}
                <form action="/favourite/add/{{chosenClothing._id}}" method="post">
                    <button type="submit"><i
                            class="bi bi-bookmark-star"
                        >Add to favourites</i></button>
                </form>
            {{/if}} --}}
        </div>
        <a href="/clothing/{{chosenClothing._id}}/edit">Update piece</a>
        <form action="/clothing/{{chosenClothing._id}}/delete" method="post">
            <button type="submit">Delete piece</button>
        </form>
    </section>
</div>
